<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/itemimage"
        android:layout_width="67dp"
        android:layout_height="76dp"
        android:layout_x="8dp"
        android:layout_y="34dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/name"
        android:layout_width="279dp"
        android:layout_height="35dp"
        android:layout_x="86dp"
        android:layout_y="10dp"
        android:text="Name"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="181dp"
        android:layout_height="57dp"
        android:layout_x="87dp"
        android:layout_y="52dp"
        android:text="Description" />

    <TextView
        android:id="@+id/stock"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_x="88dp"
        android:layout_y="121dp"
        android:text="stock"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/price"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_x="165dp"
        android:layout_y="122dp"
        android:text="price"
        android:textStyle="italic" />

    <Button
        android:id="@+id/add"
        style="@android:style/Widget.Button"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_x="277dp"
        android:layout_y="72dp"
        android:text="Add "
        android:textSize="12sp" />
</AbsoluteLayout>